extends layout/app

block vars 
    - let title = 'Handfilters';
    - let navname = "Продукция";
    - let asideName = "Рукавные фильтры"
    - let bread = [ {"name": "Продукция","href": "products.html"},{"name":"Рукавные фильтры", "href":"handfilters.html"}];

block page
    include chunk/bread
    section.page
        .container
            .page__wrapper 
                include chunk/aside
                .handfilters
                    h1.handfilters__title= asideName
                    h2.handfilters__subtitle.handfilters-choose Как выбрать рукавный фильтр?
                    ul.handfilters-choose__list
                        each item in text 
                            li.handfilters-choose__item= item
                    h2.handfilters__subtitle.handfilters-examples Примеры использования фильтр-сумок 
                    ul.handfilters-examples__list
                        each item in examples 
                            li.handfilters-examples__item= item
                    h2.handfilters-specs.handfilters__subtitle Фильтр-сумки производства IFAB
                    ul.handfilters-specs__list
                        each item in manufacture 
                            li.handfilters-specs__item= item
    section.page-catalog
        .container 
            .page-catalog__title каталог фильтр-сумок
            ul.page-catalog__wrapper
                each item in handfilters 
                    +catalog(item.name, item.img, item.link)
    include chunk/additional
                     
                    