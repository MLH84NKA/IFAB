mixin companies(img)
    li.companies__item 
        img(src="/img/companies/"+img, alt=img).companies__img

mixin catalog(name,img,link="")
    li.catalog-cell
        img(src="/img/catalog/"+img , alt=img)
        .catalog-cell__inner 
            p.catalog-cell__name= name 
            a(href=link).catalog-cell__link 

mixin slide(title,img)
    .swiper-slide
        div(style="background-image: url('../img/consult/"+img+"');").swiper-slide__background
            .swiper-slide__gradient
            if (img == '5.png') 
                h2(style="margin-bottom:39px;").swiper-slide__title= title
            else 
                h2.swiper-slide__title= title

mixin contacts(img,text,href="")
    li.contacts-list__item 
        .contacts-list__inner 
            img(src="img/contacts/"+img, alt=img).contacts-list__img
            if (href == "")
                p.contacts-list__text= text
            else
                a(href=href).contacts-list__text= text
mixin sublist(name, href)
    li.menu-sublist__item 
        a(href=href).menu-sublist__link= name

mixin menu(title, href, subtitle)
    li.menu__item
        a(href=href).menu__link= title 
            if (subtitle)
                ul.menu-sublist
                    each item in subtitle
                        +sublist(item.name,item.href)
            //- if ((title == "Фильтрующие картоны") && (title == "Адсорбенты"))
mixin about(name)
    li.about__item="-" + name 

mixin subaside(name,href)
    li.aside-sublist__item
        if (name == asideName) 
            a(href=href).aside-sublist__link.aside-sublist__link--active=name
        else 
            a(href=href).aside-sublist__link=name

mixin aside(title,href,subtitle)
    li.aside__item
        if (title == asideName) 
            a(href=href).aside__link.aside__link--active= title
        else 
            a(href=href).aside__link= title
        if (subtitle)
            ul.aside-sublist
                each item in subtitle 
                    +subaside(item.name,item.href)

mixin products(name,img,link)
    li.products-cell
        img(src="/img/catalog/"+img, alt=img).products-cell__img
        .products-cell__inner 
            p.products-cell__name= name 
            a(href=link).products-cell__link

mixin bread(name,href)
    li.bread__item 
        a(href=href).bread__link= name
            


            
                



